# ──────────────────────────────────────────────
# Clerk Authentication
# Get these from https://dashboard.clerk.com
# ──────────────────────────────────────────────
CLERK_FRONTEND_API_URL=https://<your-clerk-frontend-api>.clerk.accounts.dev
CLERK_SECRET_KEY=sk_test_<your_clerk_secret_key>
CLERK_API_URL=https://api.clerk.com

# How long (seconds) to cache Clerk user profiles locally
CLERK_USER_CACHE_TTL_SECONDS=300

# ──────────────────────────────────────────────
# Product image storage
# Set USE_S3=true to upload images to AWS S3,
# false to store locally in ./media/
# ──────────────────────────────────────────────
USE_S3=false
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_CUSTOM_DOMAIN=

# ──────────────────────────────────────────────
# Database
# DB_BACKEND=sqlite  → uses SQLITE_PATH (dev/testing only)
# DB_BACKEND=postgres → uses POSTGRES_* or DATABASE_URL
# ──────────────────────────────────────────────
DB_BACKEND=sqlite
SQLITE_PATH=test.db

# PostgreSQL (production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_db_name
POSTGRES_SSLMODE=require
# DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# ──────────────────────────────────────────────
# Razorpay Payments
# Get these from https://dashboard.razorpay.com
# ──────────────────────────────────────────────
RAZOR_PAY_API_KEY=rzp_test_<your_razorpay_key_id>
RAZOR_PAY_API_SECRET=<your_razorpay_key_secret>

# ──────────────────────────────────────────────
# CORS
# Comma-separated list of allowed frontend origins.
# Leave empty to block all cross-origin requests.
# ──────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# ──────────────────────────────────────────────
# Server
# ──────────────────────────────────────────────
# PORT=8080
# Set DEBUG=true to print stack traces on 404s (development only)
# DEBUG=false
